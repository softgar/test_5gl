'staber_general_features::rlg_editor_with_extra_actions'(_, _ObjIn, _, ObjOut) :-
    I_agent = 'builderweb',
    I_dataset = 'Default',
    newKw('actions_payload_behaviour_test_BusId', BusId),
    newKw('actions_payload_behaviour_test_channel', Channel),
    newKw('actions_payload_behaviour_test_form_busId', FormBusId),
    newKw('actions_payload_behaviour_test_form_channel', FormChannel),
    IN = {
        hasAgent: I_agent,
        hasDataset: I_dataset,
        hasKw: 'testapp_contacto_007',
        enabled: true,
        template: {
            type: 'assembly',
            children: [
                {
                    type: text,
                    arc: 'contact:hasName',
                    editor: 'rlg',
                    actions:[
                        {
                            customAction: {
                                label: {
                                    icon: 'cog'
                                },
                                collapse: false,
                                events:[
                                    {
                                        type: 'click',
                                        method: 'log',
                                        targetBusId: BusId,
                                        p_exec: {
                                            type: "sequence",
                                            hasProcess: [
                                                { 
                                                    type: "function",
                                                    in:{delay: 5000},
                                                    name: "delay_function",
                                                    context: { delegatedTo: "builderweb" }
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    type: textarea,
                    arc: 'contact:hasProfessionalProfile',
                    editor: 'rlg'
                },
                {
                    arc: 'contact:hasAddress'
                }
            ]
        }
    },

    Title = 'ui_ux_staber_general_features_payload_in_rlg_editor_actions',
    ObjForm = {
        type: 'kform',
        busId: FormBusId,
        hasChannel: FormChannel,
        in: IN
    },
    ObjMain = {
        type: 'rprocess',
        busId: BusId,
        hasChannel: Channel,
        in:{},
        hasKw: form_behaviors_rlg_editor_with_extra_actions,
        hasDsca: Title,
        hasIcon: 'list-add',
        security_edit: [permissionProfile__repositorioTests_KRP],
        security_view: [permissionProfile__repositorioTests_KRP],
        gui_out: {
            type: 'assembly',
            children: [ObjForm]
        }
    },
    create_rprocess(_,ObjMain,_,ObjOut).



'testapp::get_new_workspace_tag'(L_tags) :-
    Obj_new = {
        isMDI: true,
        hasTag: 'my_new_tag',
        hasControl: {
            type: 'assembly',
            children: [
                {
                    type: 'rprocess',
                    busId: 'bus_new_registered_tag',
                    hasKw: 'new_registered_tag',
                    hasDsca: 'Nuevo tag registrado',
                    hasIcon: 'tag',
                    hasNavbar: false,
                    isSession: true,
                    gui_out: { type: 'label', d: 'Lorem ipsum', size: 'h2' }
                }
            ]
        }
    },

    L_tags = [Obj_new].


'testapp::notify:successful_register'( Obj_ctx, Obj_in, Obj_ctx, Obj_out) :-
    wAddInfoConsoleMsgML('kworkspace', 'Se ha registrado un nuevo tag', { showTime: 5 }),
    Obj_out = Obj_in.



'staber_general_features::dynamic_tags_register'(_, _Obj_in, _, Obj_out) :-
    % I_agent = 'builderweb',
    % I_dataset = 'Default',

    newKw('bus_dynamic_tags_register', BusId),
    newKw('channel_dynamic_tags_register', Channel),
    Title = 'ui_ux_staber_general_features_tag_register',

    Gui_out = {
        type: 'assembly',
        classList: ['cols-1'],
        children: [
            {
                type: 'label',
                d: 'Nuevo registro',
                size: 'h2'
            },
            {
                type: 'label',
                d: 'Se ha registrado un nuevo tag mediante una publicación a kworkspace al topic \'registerTags\' en el proc de este componente, haz click en el botón para navegar.'
            },
            {
                type: 'button',
                label: { d: 'Navegar', icon: 'send' },
                events: [
                    {
                        type: 'click',
                        method: 'nav',
                        targetBusId: BusId,
                        payload: { hasTag: 'my_new_tag' }
                    }
                ]
            }
        ]
    },

    'testapp::get_new_workspace_tag'(L_tags),

    Obj_proc = {
        type: 'rprocess',
        busId: BusId,
        hasChannel: Channel,
        in: {},
        hasKw: rproc_features_tag_register,
        hasDsca: Title,
        hasIcon: 'tag',
        security_edit: [permissionProfile__repositorioTests_KRP],
        security_view: [permissionProfile__repositorioTests_KRP],
        gui_out: Gui_out,
        proc: {
            type: 'sequence',
            hasProcess: [
                {
                    type: 'method',
                    name: 'publish',
                    module: 'PubSub',
                    in: {
                        publish: [
                            { topic: 'registerTags', channel: 'channel__broadcast', resultset: L_tags }
                        ]
                    }
                }
            ]
        }
    },

    create_rprocess(_, Obj_proc , _, Obj_out).



